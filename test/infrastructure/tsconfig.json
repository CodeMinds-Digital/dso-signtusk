{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@test-infrastructure/*": ["./*/index.ts"],
      "@test-infrastructure/mocks": ["./mocks/index.ts"],
      "@test-infrastructure/generators": ["./generators/index.ts"],
      "@test-infrastructure/errors": ["./errors/index.ts"],
      "@test-infrastructure/integration": ["./integration/index.ts"],
      "@test-infrastructure/types": ["./types/index.ts"],
      "@test-infrastructure/config": ["./config/index.ts"]
    },
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "apps/remix/build/client",
  "installCommand": "npm install --force",
  "framework": null,
  "functions": {
    "apps/remix/api/index.js": {
      "includeFiles": "apps/remix/build/**/*",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "/apps/remix/api"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/remix/api"
    }
  ],
  "headers": [
    {
      "source": "/site.webmanifest",
      "headers": [
        { "key": "Content-Type", "value": "application/manifest+json" },
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, immutable, max-age=31536000"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ALLOWED_ORIGINS": "https://dso-signtusk.vercel.app,https://*.vercel.app"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "SKIP_ENV_VALIDATION": "true",
      "TURBO_TELEMETRY_DISABLED": "1",
      "SKIP_PATCHES": "true"
    }
  }
}

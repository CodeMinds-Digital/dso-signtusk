{
  "private": true,
  "name": "@signtusk/root",
  "version": "2.2.6",
  "license": "Private - Part of Signtusk Platform",
  "description": "Comprehensive enterprise-grade e-signature platform with simplified Documenso foundation",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "if [ \"$SKIP_PATCHES\" != \"true\" ]; then patch-package; fi && if [ \"$INSTALL_PLAYWRIGHT\" = \"true\" ]; then npx playwright install; fi",
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@signtusk/remix",
    "dev:remix": "turbo run dev --filter=@signtusk/remix",
    "dev:web": "cd apps/web && npm run dev -- --port 3000 --hostname 0.0.0.0",
    "dev:app": "cd apps/app && npm run dev -- --host 0.0.0.0 --port 3001",
    "dev:docs": "cd apps/docs && npm run dev -- --port 3003 --hostname 0.0.0.0",
    "dev:mobile": "cd apps/mobile && npm run start",
    "dev:mobile:ios": "cd apps/mobile && npm run ios",
    "dev:mobile:android": "cd apps/mobile && npm run android",
    "dev:debug": "turbo run dev:debug",
    "dev:services": "docker-compose -f docker-compose.dev.yml up -d database redis mailhog adminer redis-commander",
    "dev:hybrid": "npm run dev:services && sleep 5 && npm run dev",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    "dev:docker:build": "docker-compose -f docker-compose.dev.yml up --build",
    "start": "turbo run start --filter=@signtusk/remix",
    "start:web": "cd apps/web && npm run start",
    "start:app": "cd apps/app && npm run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:unit": "vitest --run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:e2e": "echo 'E2E tests disabled - no browser dependencies'",
    "test:e2e:ui": "echo 'E2E UI tests disabled - no browser dependencies'",
    "test:properties": "vitest --run test/properties",
    "test:all": "npm run type-check && npm run lint && npm run test:coverage && npm run test:properties && npm run test:e2e",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf node_modules",
    "reset:hard": "npm run clean && npm ci",
    "format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "if [ \"$VERCEL\" != \"1\" ]; then husky && husky install || true; fi",
    "commitlint": "commitlint --edit",
    "d": "npm run dx && npm run translate:compile && npm run dev",
    "dx": "npm ci && npm run dx:up && npm run prisma:migrate-dev && npm run prisma:seed",
    "dx:up": "docker compose -f docker/development/compose.yml up -d",
    "dx:down": "docker compose -f docker/development/compose.yml down",
    "ci": "turbo run build --filter=@signtusk/remix && turbo run test:e2e",
    "prisma:generate": "npm run with:env -- npm run prisma:generate -w @signtusk/prisma",
    "prisma:migrate-dev": "npm run with:env -- npm run prisma:migrate-dev -w @signtusk/prisma",
    "prisma:migrate-deploy": "npm run with:env -- npm run prisma:migrate-deploy -w @signtusk/prisma",
    "prisma:migrate-reset": "npm run with:env -- npm run prisma:migrate-reset -w @signtusk/prisma",
    "prisma:seed": "npm run with:env -- npm run prisma:seed -w @signtusk/prisma",
    "prisma:studio": "npm run with:env -- npm run prisma:studio -w @signtusk/prisma",
    "with:env": "dotenv -e .env -e .env.local --",
    "demo:create-users": "./scripts/create-demo-user.sh",
    "demo:setup": "npm run demo:create-users && echo 'Demo setup complete! Run: npm run dev'",
    "demo:simple": "./scripts/simple-demo.sh",
    "demo:quick": "npm run demo:simple && echo 'Quick demo ready! Run: npm run dev'",
    "precommit": "npm install && git add package.json package-lock.json",
    "trigger:dev": "npm run with:env -- npx trigger-cli dev --handler-path=\"/api/jobs\"",
    "inngest:dev": "inngest dev -u http://localhost:3000/api/jobs",
    "make:version": "npm version --workspace @signtusk/remix --include-workspace-root --no-git-tag-version -m \"v%s\"",
    "translate": "npm run translate:extract && npm run translate:compile",
    "translate:extract": "lingui extract --clean",
    "translate:compile": "lingui compile",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:reset": "turbo run db:reset",
    "db:studio": "npx prisma studio",
    "cache:clear": "turbo run cache:clear",
    "sitemap:generate": "turbo run sitemap:generate",
    "docker:build": "docker build -t signtusk .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t signtusk:dev .",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.dev.yml restart",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:setup:hybrid": "./scripts/dev-setup-hybrid.sh",
    "dev:start": "./scripts/dev-start.sh",
    "dev:stop": "./scripts/dev-stop.sh",
    "dev:reset": "./scripts/dev-reset.sh",
    "dev:status": "docker-compose -f docker-compose.dev.yml ps",
    "deploy:dev": "./scripts/deploy-hybrid.sh development",
    "deploy:staging": "./scripts/deploy-hybrid.sh staging",
    "deploy:prod": "./scripts/deploy-hybrid.sh production",
    "config:validate": "node scripts/env-config.js validate",
    "config:generate": "node scripts/env-config.js generate",
    "config:sync": "node scripts/env-config.js sync",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "health:full": "./scripts/health-check.sh",
    "debug:inspect": "node --inspect=0.0.0.0:9229 --inspect-brk",
    "debug:logs": "docker-compose -f docker-compose.dev.yml logs -f --tail=100"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@faker-js/faker": "^9.0.0",
    "@prisma/client": "^6.19.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@trpc/client": "11.7.1",
    "@trpc/react-query": "11.7.1",
    "@trpc/server": "11.7.1",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "@ts-rest/serverless": "^3.52.1",
    "@types/content-disposition": "^0.5.9",
    "@types/jszip": "^3.4.1",
    "@types/node": "^22.10.0",
    "@types/nodemailer": "^7.0.4",
    "@types/papaparse": "^5.5.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "18.3.27",
    "@types/react-dom": "^18",
    "@types/ua-parser-js": "^0.7.39",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.16",
    "bcryptjs": "^3.0.3",
    "concurrently": "^9.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "fast-check": "^3.23.2",
    "glob": "^13.0.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "nanoid": "^5.1.6",
    "node-gyp": "^12.1.0",
    "nodemailer": "^7.0.10",
    "pdfjs-dist": "5.4.449",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "prisma-extension-kysely": "^3.0.0",
    "prisma-json-types-generator": "^3.6.2",
    "prisma-kysely": "^2.2.1",
    "rimraf": "^6.1.2",
    "superjson": "^2.2.5",
    "syncpack": "^14.0.0-alpha.27",
    "trpc-to-openapi": "2.4.0",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "5.6.2",
    "vite": "^7.2.4",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.16",
    "zod-openapi": "^4.2.4",
    "zod-prisma-types": "3.3.5"
  },
  "packageManager": "npm@10.7.0",
  "engines": {
    "npm": ">=10.7.0",
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@ai-sdk/google-vertex": "3.0.81",
    "@lingui/cli": "^5.6.0",
    "@lingui/conf": "^5.6.0",
    "@lingui/core": "^5.6.0",
    "@napi-rs/canvas": "^0.1.53",
    "@signtusk/prisma": "*",
    "@types/jsonwebtoken": "^9.0.10",
    "ai": "^5.0.104",
    "cron": "^4.4.0",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "inngest-cli": "^1.13.7",
    "jsonwebtoken": "^9.0.3",
    "jszip": "^3.10.1",
    "luxon": "^3.7.2",
    "patch-package": "^8.0.1",
    "posthog-node": "4.18.0",
    "qrcode": "^1.5.3",
    "react": "^18",
    "sharp": "^0.33.5",
    "zod": "^3.25.76"
  },
  "overrides": {
    "pdfjs-dist": "5.4.449",
    "typescript": "5.6.2",
    "zod": "^3.25.76"
  }
}

# Netlify Environment Variables Template
# Copy this file and configure for each Netlify site

# Build Configuration
NODE_ENV=production
NODE_VERSION=22
NPM_VERSION=10.7.0
NPM_FLAGS=--include=dev

# Dependency Management
SKIP_PATCHES=false
INSTALL_PLAYWRIGHT=false

# Shared Environment Variables
NEXT_PUBLIC_PROJECT=signtusk

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database

# Authentication
NEXTAUTH_SECRET=your-secret-here
JWT_SECRET=your-jwt-secret

# File Upload
NEXT_PUBLIC_UPLOAD_TRANSPORT=s3
NEXT_PRIVATE_UPLOAD_BUCKET=your-bucket
NEXT_PRIVATE_UPLOAD_REGION=us-east-1

# Email Configuration
NEXT_PRIVATE_SMTP_TRANSPORT=resend
NEXT_PRIVATE_RESEND_API_KEY=your-resend-key

# Billing (if enabled)
NEXT_PRIVATE_STRIPE_API_KEY=your-stripe-key
NEXT_PRIVATE_STRIPE_WEBHOOK_SECRET=your-webhook-secret

# Analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key

# App-specific URLs
NEXT_PUBLIC_WEBAPP_URL=https://app.yourdomain.com
NEXT_PUBLIC_MARKETING_URL=https://yourdomain.com
NEXT_PUBLIC_DOCS_URL=https://docs.yourdomain.com

# Turbo Configuration
TURBO_TELEMETRY_DISABLED=1

# Build Optimization
NETLIFY_CACHE_ENABLED=true
NETLIFY_BUILD_DEBUG=false
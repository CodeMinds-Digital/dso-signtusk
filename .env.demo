# Demo Environment Configuration (SQLite-based for local development)
NODE_ENV="development"
NEXTAUTH_SECRET="demo-secret-for-validation-that-is-long-enough"
NEXT_PRIVATE_ENCRYPTION_KEY="demo-encryption-key-32-characters"
NEXT_PRIVATE_ENCRYPTION_SECONDARY_KEY="demo-secondary-key-32-characters"
NEXT_PUBLIC_WEBAPP_URL="http://localhost:3000"
NEXT_PRIVATE_INTERNAL_WEBAPP_URL="http://localhost:3000"
PORT=3000

# SQLite Database for Demo (no Docker required)
NEXT_PRIVATE_DATABASE_URL="file:./demo.db"
NEXT_PRIVATE_DIRECT_DATABASE_URL="file:./demo.db"

# Local Redis alternative (optional)
REDIS_URL="redis://localhost:6379"

# Local file-based transport
NEXT_PRIVATE_SIGNING_TRANSPORT="local"
NEXT_PUBLIC_UPLOAD_TRANSPORT="database"

# Mock SMTP for demo (no real emails)
NEXT_PRIVATE_SMTP_TRANSPORT="console"
NEXT_PRIVATE_SMTP_HOST="localhost"
NEXT_PRIVATE_SMTP_PORT=587
NEXT_PRIVATE_SMTP_USERNAME="demo"
NEXT_PRIVATE_SMTP_PASSWORD="demo"
NEXT_PRIVATE_SMTP_FROM_NAME="Signtusk Demo"
NEXT_PRIVATE_SMTP_FROM_ADDRESS="demo@signtusk.local"

# Demo-specific settings
PDF_GENERATION_METHOD="server-side"
NEXT_PRIVATE_JOBS_PROVIDER="local"
DEMO_MODE="true"
# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy these to your production Netlify sites' environment variables
# =============================================================================

# =============================================================================
# PRODUCTION DOMAIN CONFIGURATION
# =============================================================================
# Replace with your actual production domains
PRODUCTION_MARKETING_DOMAIN=yourdomain.com
PRODUCTION_REMIX_DOMAIN=app.yourdomain.com
PRODUCTION_DOCS_DOMAIN=docs.yourdomain.com

PRODUCTION_MARKETING_URL=https://yourdomain.com
PRODUCTION_REMIX_URL=https://app.yourdomain.com
PRODUCTION_DOCS_URL=https://docs.yourdomain.com

# =============================================================================
# SSL AND SECURITY CONFIGURATION
# =============================================================================
# SSL certificate monitoring
SSL_CERTIFICATE_EXPIRY_THRESHOLD=30
SSL_CERTIFICATE_MONITORING_ENABLED=true

# Security headers enforcement
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENFORCEMENT_MODE=enforce

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================
# Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_production_posthog_key
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-PRODUCTION-XXXXXXXXXX

# Error monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
BUGSNAG_API_KEY=your-bugsnag-api-key

# Uptime monitoring
UPTIME_MONITOR_URL=https://your-uptime-monitor.com/webhook
UPTIME_CHECK_INTERVAL=300

# Log aggregation
LOG_AGGREGATION_URL=https://your-log-service.com/api
LOG_LEVEL=info

# Performance monitoring
PERFORMANCE_MONITOR_KEY=your-performance-monitor-key
PERFORMANCE_THRESHOLD_MS=2000

# =============================================================================
# NETLIFY MONITORING
# =============================================================================
NETLIFY_ANALYTICS_ENABLED=true
NETLIFY_BUILD_NOTIFICATIONS_ENABLED=true
NETLIFY_CDN_OPTIMIZATION_ENABLED=true

# Notification webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/production/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/production/webhook
DEPLOYMENT_NOTIFICATION_ENABLED=true

# Build monitoring
BUILD_TIMEOUT_THRESHOLD=1800
BUILD_FAILURE_ALERT_ENABLED=true

# =============================================================================
# PRODUCTION DATABASE CONFIGURATION
# =============================================================================
# Use production database with connection pooling
DATABASE_URL=postgresql://username:password@prod-host.example.com:5432/prod_database?sslmode=require&pgbouncer=true
POSTGRES_PRISMA_URL=postgresql://username:password@prod-host.example.com:5432/prod_database?sslmode=require&pgbouncer=true
NEXT_PRIVATE_DATABASE_URL=postgresql://username:password@prod-host.example.com:5432/prod_database?sslmode=require&pgbouncer=true

# Database monitoring
DATABASE_CONNECTION_POOL_SIZE=20
DATABASE_QUERY_TIMEOUT=30000
DATABASE_MONITORING_ENABLED=true

# =============================================================================
# PRODUCTION AUTHENTICATION
# =============================================================================
# Strong production secrets (minimum 32 characters)
NEXTAUTH_SECRET=your-production-nextauth-secret-64-characters-minimum-for-security
JWT_SECRET=your-production-jwt-secret-64-characters-minimum-for-security
NEXT_PRIVATE_ENCRYPTION_KEY=your-production-encryption-key-64-characters-minimum
NEXT_PRIVATE_ENCRYPTION_SECONDARY_KEY=your-production-secondary-key-64-characters
SESSION_SECRET=your-production-session-secret-64-characters-minimum

# Session configuration
SESSION_MAX_AGE=86400
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# =============================================================================
# PRODUCTION FILE STORAGE
# =============================================================================
# Production S3 bucket with versioning and backup
NEXT_PUBLIC_UPLOAD_TRANSPORT=s3
NEXT_PRIVATE_UPLOAD_BUCKET=your-production-s3-bucket
NEXT_PRIVATE_UPLOAD_REGION=us-east-1
NEXT_PRIVATE_UPLOAD_ACCESS_KEY_ID=your-production-aws-access-key
NEXT_PRIVATE_UPLOAD_SECRET_ACCESS_KEY=your-production-aws-secret-key

# S3 security and optimization
NEXT_PRIVATE_UPLOAD_FORCE_PATH_STYLE=false
NEXT_PRIVATE_UPLOAD_ENCRYPTION=AES256
NEXT_PRIVATE_UPLOAD_VERSIONING=true

# CDN configuration
NEXT_PRIVATE_UPLOAD_CDN_URL=https://cdn.yourdomain.com
NEXT_PRIVATE_UPLOAD_CDN_ENABLED=true

# =============================================================================
# PRODUCTION EMAIL CONFIGURATION
# =============================================================================
# Production email service
NEXT_PRIVATE_SMTP_TRANSPORT=resend
NEXT_PRIVATE_RESEND_API_KEY=re_your_production_resend_api_key

# Email sender configuration
NEXT_PRIVATE_SMTP_FROM_NAME=Signtusk
NEXT_PRIVATE_SMTP_FROM_ADDRESS=noreply@yourdomain.com

# Email monitoring
EMAIL_DELIVERY_MONITORING=true
EMAIL_BOUNCE_HANDLING=true

# =============================================================================
# PRODUCTION DOCUMENT SIGNING
# =============================================================================
# Production signing certificates
NEXT_PRIVATE_SIGNING_TRANSPORT=gcloud-hsm
NEXT_PRIVATE_SIGNING_GCLOUD_HSM_KEY_PATH=projects/your-prod-project/locations/global/keyRings/prod-ring/cryptoKeys/prod-key
NEXT_PRIVATE_SIGNING_GCLOUD_HSM_PUBLIC_CRT_FILE_CONTENTS=your-production-certificate-base64
NEXT_PRIVATE_SIGNING_GCLOUD_APPLICATION_CREDENTIALS_CONTENTS=your-production-service-account-json-base64

# Signing security
SIGNING_AUDIT_LOGGING=true
SIGNING_TIMESTAMP_AUTHORITY=https://timestamp.digicert.com

# =============================================================================
# PRODUCTION BILLING & PAYMENTS
# =============================================================================
# Stripe live keys
NEXT_PRIVATE_STRIPE_API_KEY=sk_live_your_production_stripe_secret_key
NEXT_PRIVATE_STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_publishable_key

# Payment monitoring
STRIPE_WEBHOOK_MONITORING=true
PAYMENT_FAILURE_ALERTS=true

# =============================================================================
# PRODUCTION OAUTH PROVIDERS
# =============================================================================
# Production OAuth applications
NEXT_PRIVATE_GOOGLE_CLIENT_ID=your-production-google-client-id
NEXT_PRIVATE_GOOGLE_CLIENT_SECRET=your-production-google-client-secret

NEXT_PRIVATE_MICROSOFT_CLIENT_ID=your-production-microsoft-client-id
NEXT_PRIVATE_MICROSOFT_CLIENT_SECRET=your-production-microsoft-client-secret

# OAuth security
OAUTH_STATE_VALIDATION=true
OAUTH_PKCE_ENABLED=true

# =============================================================================
# PRODUCTION CACHING
# =============================================================================
# Redis for production caching
REDIS_URL=redis://your-production-redis-host:6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# Cache configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_STATIC=86400
CACHE_COMPRESSION=true

# =============================================================================
# PRODUCTION BACKGROUND JOBS
# =============================================================================
# Production job processing
NEXT_PRIVATE_JOBS_PROVIDER=inngest
NEXT_PRIVATE_INNGEST_EVENT_KEY=your-production-inngest-key
NEXT_PRIVATE_INNGEST_SIGNING_KEY=your-production-inngest-signing-key

# Job monitoring
JOB_FAILURE_ALERTS=true
JOB_PERFORMANCE_MONITORING=true

# =============================================================================
# PRODUCTION AI SERVICES
# =============================================================================
# Google Vertex AI production
GOOGLE_VERTEX_PROJECT_ID=your-production-gcp-project
GOOGLE_VERTEX_LOCATION=us-central1
GOOGLE_VERTEX_API_KEY=your-production-vertex-key

# AI usage monitoring
AI_USAGE_MONITORING=true
AI_COST_ALERTS=true

# =============================================================================
# PRODUCTION COMPLIANCE
# =============================================================================
# Compliance and audit logging
AUDIT_LOGGING_ENABLED=true
COMPLIANCE_MODE=SOC2
DATA_RETENTION_DAYS=2555

# Privacy and GDPR
GDPR_COMPLIANCE_ENABLED=true
DATA_PROCESSING_CONSENT_REQUIRED=true

# =============================================================================
# PRODUCTION PERFORMANCE
# =============================================================================
# Performance optimization
NODE_OPTIONS=--max-old-space-size=8192
TURBO_TELEMETRY_DISABLED=1
NEXT_TELEMETRY_DISABLED=1

# Performance monitoring thresholds
PERFORMANCE_BUDGET_JS=250000
PERFORMANCE_BUDGET_CSS=50000
PERFORMANCE_BUDGET_IMAGES=1000000

# =============================================================================
# PRODUCTION BACKUP AND DISASTER RECOVERY
# =============================================================================
# Backup configuration
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_RETENTION_DAYS=30
FILE_BACKUP_ENABLED=true

# Disaster recovery
DR_SITE_ENABLED=false
DR_RTO_HOURS=4
DR_RPO_HOURS=1

# =============================================================================
# NOTES FOR PRODUCTION CONFIGURATION:
# =============================================================================
# 1. Use strong, unique secrets for all production services
# 2. Enable all monitoring and alerting features
# 3. Use production-grade database with connection pooling
# 4. Configure proper backup and disaster recovery
# 5. Enable audit logging for compliance
# 6. Use HSM or secure key management for signing certificates
# 7. Monitor all third-party service quotas and limits
# 8. Regularly rotate API keys and secrets
# 9. Test disaster recovery procedures regularly
# 10. Monitor performance and set up alerts for degradation
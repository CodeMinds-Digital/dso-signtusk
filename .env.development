# Development Environment Configuration

# Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/signtusk_dev
DB_MAX_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_SSL=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Authentication
JWT_SECRET=development-jwt-secret-that-is-long-enough-for-validation-requirements-in-development
SESSION_TIMEOUT=86400000
REFRESH_TOKEN_EXPIRY=604800000
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=300000

# OAuth Providers (optional in development)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email (use MailHog in development)
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false
EMAIL_FROM=dev@signtusk.local

# File Storage
STORAGE_PROVIDER=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800

# Security
ENCRYPTION_KEY=development-encryption-key-32-chars-long-for-security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
CSRF_PROTECTION=false
CSP_ENABLED=false

# Monitoring
SENTRY_DSN=
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_DESTINATION=console

# Performance
COMPRESSION_ENABLED=false
CACHING_ENABLED=true
CACHE_TTL=300
CLUSTERING_ENABLED=false

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_BLOCKCHAIN=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_ENTERPRISE_SSO=false
ENABLE_WHITE_LABELING=false
ENABLE_MOBILE_APP=true
ENABLE_API_V2=true
ENABLE_EXPERIMENTAL_FEATURES=true

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000
API_MAX_PAYLOAD_SIZE=50mb

# External Services
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Development Tools
SEED_DATABASE=true
{
  "name": "@signtusk/realtime",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time API features with WebSocket and SSE support for Signtusk",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:tsc": "tsc",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@signtusk/lib": "*",
    "@signtusk/cache": "*",
    "ws": "^8.16.0",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
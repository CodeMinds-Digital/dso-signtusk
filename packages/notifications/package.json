{
  "name": "@signtusk/notifications",
  "version": "1.0.0",
  "description": "Advanced notification system with SMS, push notifications, email customization, scheduling, and analytics",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@signtusk/lib": "*",
    "@signtusk/database": "*",
    "@signtusk/cache": "*",
    "@signtusk/jobs": "*",
    "@signtusk/email": "*",
    "twilio": "^4.19.0",
    "firebase-admin": "^12.0.0",
    "web-push": "^3.6.6",
    "node-cron": "^3.0.3",
    "zod": "^3.22.0",
    "pino": "^8.17.0",
    "ioredis": "^5.3.2",
    "date-fns": "^3.0.0",
    "handlebars": "^4.7.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@react-email/components": "0.0.7",
    "@react-email/render": "0.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/web-push": "^3.6.3",
    "@types/handlebars": "^4.1.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "eslint": "^8.55.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.4",
    "jsdom": "^23.0.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}

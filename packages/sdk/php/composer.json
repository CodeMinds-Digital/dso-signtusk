{
    "name": "signtusk/sdk",
    "description": "Official PHP SDK for Signtusk e-signature platform",
    "type": "library",
    "keywords": [
        "signtusk",
        "e-signature",
        "digital-signature",
        "pdf",
        "api-client",
        "document-signing",
        "electronic-signature"
    ],
    "homepage": "https://docs.signtusk.com/sdk/php",
    "license": "MIT",
    "authors": [
        {
            "name": "Signtusk Team",
            "email": "support@signtusk.com",
            "homepage": "https://signtusk.com"
        }
    ],
    "support": {
        "issues": "https://github.com/signtusk/sdk/issues",
        "source": "https://github.com/signtusk/sdk/tree/main/php",
        "docs": "https://docs.signtusk.com/sdk/php"
    },
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.5",
        "psr/http-message": "^1.0|^2.0",
        "psr/log": "^1.1|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "phpstan/phpstan": "^1.8",
        "squizlabs/php_codesniffer": "^3.7",
        "php-cs-fixer/shim": "^3.13",
        "mockery/mockery": "^1.5",
        "symfony/var-dumper": "^5.4|^6.0"
    },
    "autoload": {
        "psr-4": {
            "DocuSignAlternative\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DocuSignAlternative\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "php-cs-fixer fix src tests",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
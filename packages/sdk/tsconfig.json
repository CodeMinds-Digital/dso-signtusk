{
    "extends": "@signtusk/tsconfig/react-library.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "incremental": false,
        "noEmit": false,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
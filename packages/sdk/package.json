{
  "name": "@signtusk/sdk",
  "version": "1.0.0",
  "description": "Official SDK for Signtusk - Multi-language client libraries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./typescript": {
      "import": "./dist/typescript/index.mjs",
      "require": "./dist/typescript/index.js",
      "types": "./dist/typescript/index.d.ts"
    }
  },
  "files": [
    "dist",
    "python",
    "php",
    "dotnet",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:typescript": "tsup src/typescript/index.ts --format cjs,esm --dts --out-dir dist/typescript --clean",
    "build:all": "npm run build && npm run build:typescript && npm run build:python && npm run build:php && npm run build:dotnet",
    "build:python": "cd python && python setup.py sdist bdist_wheel",
    "build:php": "cd php && composer install --no-dev --optimize-autoloader",
    "build:dotnet": "cd dotnet && dotnet build --configuration Release",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist && rm -rf python/dist && rm -rf python/build && rm -rf php/vendor && rm -rf dotnet/bin && rm -rf dotnet/obj",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:python": "cd python && python -m pytest tests/",
    "test:php": "cd php && ./vendor/bin/phpunit tests/",
    "test:dotnet": "cd dotnet && dotnet test",
    "test:all": "npm run test && npm run test:python && npm run test:php && npm run test:dotnet",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "docs:generate": "typedoc src/typescript/index.ts --out docs/typescript",
    "docs:python": "cd python && sphinx-build -b html docs docs/_build",
    "docs:php": "cd php && phpdoc -d src -t docs",
    "docs:dotnet": "cd dotnet && docfx docfx.json",
    "publish:npm": "npm publish --access public",
    "publish:python": "cd python && python -m twine upload dist/*",
    "publish:php": "cd php && composer publish",
    "publish:dotnet": "cd dotnet && dotnet nuget push bin/Release/*.nupkg --source https://api.nuget.org/v3/index.json"
  },
  "keywords": [
    "docusign-alternative",
    "e-signature",
    "digital-signature",
    "pdf",
    "sdk",
    "api-client",
    "typescript",
    "javascript",
    "python",
    "php",
    "dotnet",
    "csharp"
  ],
  "author": "DocuSign Alternative Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/docusign-alternative/sdk"
  },
  "bugs": {
    "url": "https://github.com/docusign-alternative/sdk/issues"
  },
  "homepage": "https://docs.docusign-alternative.com/sdk",
  "dependencies": {
    "axios": "^1.6.2",
    "form-data": "^4.0.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@signtusk/tsconfig": "*",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "fast-check": "^3.15.0",
    "typedoc": "^0.26.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@signtusk/api": "*"
  },
  "peerDependenciesMeta": {
    "@docusign-alternative/api": {
      "optional": true
    }
  }
}
{
  "name": "@signtusk/search",
  "version": "0.1.0",
  "description": "Advanced search system with Elasticsearch integration, faceted search, and AI-powered suggestions",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup --dts",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest --run",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "@signtusk/lib": "*",
    "@signtusk/database": "*",
    "@signtusk/cache": "*",
    "@signtusk/ai": "*",
    "zod": "^3.22.4",
    "pino": "^8.16.2",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "natural": "^6.12.0",
    "compromise": "^14.10.0",
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/natural": "^5.1.5",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "fast-check": "^3.15.0",
    "@signtusk/eslint-config": "*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ]
}

{
    "extends": "@signtusk/tsconfig/react-library.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
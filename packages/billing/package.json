{
  "name": "@signtusk/billing",
  "version": "1.0.0",
  "description": "Billing and subscription management for Signtusk",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "UNLICENSED",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --clean --external @signtusk/database,@signtusk/lib",
    "dev": "tsup src/index.ts --format cjs,esm --watch --external @signtusk/database,@signtusk/lib",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "stripe": "^14.21.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "@signtusk/database": "*",
    "@signtusk/lib": "*"
  },
  "devDependencies": {
    "@signtusk/tsconfig": "*",
    "@types/node": "^20.10.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
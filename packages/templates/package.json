{
  "name": "@signtusk/templates",
  "version": "0.1.0",
  "description": "Template management system for Signtusk",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup --dts",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@signtusk/database": "*",
    "@signtusk/lib": "*",
    "zod": "^3.22.4",
    "pino": "^8.16.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ]
}
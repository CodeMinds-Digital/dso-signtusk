{
  "name": "@signtusk/database",
  "version": "1.0.0",
  "private": true,
  "description": "Database schema and migrations for Signtusk",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:migrate:run": "tsx src/migrate.ts run",
    "db:migrate:status": "tsx src/migrate.ts status",
    "db:migrate:rollback": "tsx src/migrate.ts rollback",
    "db:seed": "tsx seed/index.ts",
    "db:studio": "prisma studio",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "fast-check": "^3.15.0",
    "prisma": "^7.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "prisma": {
    "schema": "schema.prisma"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "schema.prisma"
  ]
}
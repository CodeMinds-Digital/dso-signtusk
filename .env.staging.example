# =============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# Copy these to your staging environment or CI/CD system
# =============================================================================

# =============================================================================
# NETLIFY STAGING DEPLOYMENT HOOKS
# =============================================================================
# Get these from your Netlify staging sites' deploy settings
NETLIFY_MARKETING_HOOK_STAGING=https://api.netlify.com/build_hooks/your-marketing-staging-hook-id
NETLIFY_REMIX_HOOK_STAGING=https://api.netlify.com/build_hooks/your-remix-staging-hook-id
NETLIFY_DOCS_HOOK_STAGING=https://api.netlify.com/build_hooks/your-docs-staging-hook-id

# =============================================================================
# STAGING SITE URLS
# =============================================================================
# These should match your actual staging site URLs
STAGING_MARKETING_URL=https://staging-marketing-signtusk.netlify.app
STAGING_REMIX_URL=https://staging-app-signtusk.netlify.app
STAGING_DOCS_URL=https://staging-docs-signtusk.netlify.app

# =============================================================================
# STAGING DATABASE CONFIGURATION
# =============================================================================
# Use separate staging database to avoid affecting production data
STAGING_DATABASE_URL=postgresql://username:password@staging-host.example.com:5432/staging_database?sslmode=require
STAGING_POSTGRES_PRISMA_URL=postgresql://username:password@staging-host.example.com:5432/staging_database?sslmode=require

# =============================================================================
# STAGING AUTHENTICATION
# =============================================================================
# Use different secrets for staging environment
STAGING_NEXTAUTH_SECRET=your-staging-nextauth-secret-32-characters-minimum
STAGING_JWT_SECRET=your-staging-jwt-secret-32-characters-minimum
STAGING_ENCRYPTION_KEY=your-staging-encryption-key-32-characters-minimum

# =============================================================================
# STAGING FILE STORAGE
# =============================================================================
# Use separate S3 bucket for staging uploads
STAGING_UPLOAD_BUCKET=your-staging-s3-bucket-name
STAGING_UPLOAD_ACCESS_KEY_ID=your-staging-aws-access-key-id
STAGING_UPLOAD_SECRET_ACCESS_KEY=your-staging-aws-secret-access-key

# =============================================================================
# STAGING EMAIL CONFIGURATION
# =============================================================================
# Use test email service or separate configuration for staging
STAGING_RESEND_API_KEY=re_your_staging_resend_api_key
STAGING_SMTP_FROM_ADDRESS=staging-noreply@yourdomain.com

# =============================================================================
# STAGING SIGNING CONFIGURATION
# =============================================================================
# Use test certificates for staging document signing
STAGING_SIGNING_PASSPHRASE=your-staging-signing-passphrase
STAGING_SIGNING_LOCAL_FILE_CONTENTS=your-staging-base64-encoded-p12-contents

# =============================================================================
# STAGING PAYMENT CONFIGURATION
# =============================================================================
# Use Stripe test keys for staging
STAGING_STRIPE_API_KEY=sk_test_your_stripe_test_secret_key
STAGING_STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret
STAGING_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key

# =============================================================================
# STAGING ANALYTICS
# =============================================================================
# Use separate analytics properties for staging
STAGING_POSTHOG_KEY=phc_your_staging_posthog_project_key
STAGING_GA_MEASUREMENT_ID=G-STAGING-XXXXXXXXXX

# =============================================================================
# DEPLOYMENT VERIFICATION SETTINGS
# =============================================================================
# Timeout settings for deployment verification
DEPLOYMENT_TIMEOUT=600000
HEALTH_CHECK_INTERVAL=10000
HEALTH_CHECK_TIMEOUT=10000

# =============================================================================
# CROSS-APPLICATION TESTING
# =============================================================================
# Enable/disable specific cross-application tests
TEST_CROSS_APP_ROUTING=true
TEST_SHARED_AUTHENTICATION=false
TEST_API_CONNECTIVITY=true

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================
# Slack webhook for deployment notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DEPLOYMENT_NOTIFICATION_ENABLED=true

# =============================================================================
# NOTES FOR STAGING CONFIGURATION:
# =============================================================================
# 1. Always use separate credentials and resources for staging
# 2. Use test/sandbox modes for all third-party services
# 3. Ensure staging database is isolated from production
# 4. Use different domain names to avoid confusion
# 5. Test all integrations thoroughly in staging before production
# 6. Regularly refresh staging data from production (sanitized)
# 7. Monitor staging deployments for performance and reliability
# Production Environment Configuration

# Environment
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=${DATABASE_URL}
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_SSL=true

# Redis
REDIS_URL=${REDIS_URL}
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Authentication
JWT_SECRET=${JWT_SECRET}
SESSION_TIMEOUT=86400000
REFRESH_TOKEN_EXPIRY=604800000
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# OAuth Providers
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
MICROSOFT_CLIENT_ID=${MICROSOFT_CLIENT_ID}
MICROSOFT_CLIENT_SECRET=${MICROSOFT_CLIENT_SECRET}
GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}

# Email
EMAIL_PROVIDER=${EMAIL_PROVIDER:-resend}
RESEND_API_KEY=${RESEND_API_KEY}
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT:-587}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_SECURE=true
EMAIL_FROM=${EMAIL_FROM:-noreply@signtusk.com}

# File Storage
STORAGE_PROVIDER=${STORAGE_PROVIDER:-s3}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=${AWS_REGION}
AWS_S3_BUCKET=${AWS_S3_BUCKET}
MAX_FILE_SIZE=52428800

# Security
ENCRYPTION_KEY=${ENCRYPTION_KEY}
CORS_ORIGINS=${CORS_ORIGINS:-https://app.signtusk.com}
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CSRF_PROTECTION=true
CSP_ENABLED=true

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=both
LOG_FILE_PATH=/app/logs/app.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# Performance
COMPRESSION_ENABLED=true
CACHING_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=104857600
CLUSTERING_ENABLED=true

# Feature Flags
ENABLE_AI_FEATURES=${ENABLE_AI_FEATURES:-false}
ENABLE_BLOCKCHAIN=${ENABLE_BLOCKCHAIN:-false}
ENABLE_ADVANCED_ANALYTICS=${ENABLE_ADVANCED_ANALYTICS:-true}
ENABLE_ENTERPRISE_SSO=${ENABLE_ENTERPRISE_SSO:-true}
ENABLE_WHITE_LABELING=${ENABLE_WHITE_LABELING:-true}
ENABLE_MOBILE_APP=${ENABLE_MOBILE_APP:-true}
ENABLE_API_V2=${ENABLE_API_V2:-true}
ENABLE_EXPERIMENTAL_FEATURES=${ENABLE_EXPERIMENTAL_FEATURES:-false}

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000
API_MAX_PAYLOAD_SIZE=10mb

# External Services
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=${OPENAI_MODEL:-gpt-4}
STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Production Settings
SEED_DATABASE=false
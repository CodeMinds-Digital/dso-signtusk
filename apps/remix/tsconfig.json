{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "../../packages/prisma/types/types.d.ts"
  ],
  "exclude": [
    "../../documenso-main",
    "../../dso-signtusk-working",
    "../../dso-pdf-sign",
    "../../backups",
    "../../node_modules",
    "node_modules"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@signtusk/api": ["../../packages/api"],
      "@signtusk/assets": ["../../packages/assets"],
      "@signtusk/auth": ["../../packages/auth"],
      "@signtusk/ee": ["../../packages/ee"],
      "@signtusk/lib": ["../../packages/lib"],
      "@signtusk/pdf-processing": ["../../packages/pdf-processing"],
      "@signtusk/prisma": ["../../packages/prisma"],
      "@signtusk/trpc": ["../../packages/trpc"],
      "@signtusk/ui": ["../../packages/ui"],
      "@signtusk/tailwind-config": ["../../packages/tailwind-config"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  }
}

{
  "buildCommand": "cd ../.. && npm ci --ignore-scripts && npx turbo run build --filter=@signtusk/remix --only",
  "outputDirectory": "build/client",
  "installCommand": "echo 'Dependencies handled by build command'",
  "framework": null,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/build/(.*)",
      "destination": "/build/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "headers": [
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "TURBO_TELEMETRY_DISABLED": "1",
    "INSTALL_PLAYWRIGHT": "false",
    "SKIP_PATCHES": "true",
    "AWS_ACCESS_KEY_ID": "dummy",
    "AWS_SECRET_ACCESS_KEY": "dummy", 
    "AWS_REGION": "us-east-1",
    "WEBHOOK_SECRET": "dummy",
    "RATE_LIMIT_ENABLED": "false"
  }
}
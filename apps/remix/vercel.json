{
  "framework": null,
  "buildCommand": "npm install --ignore-scripts && npm run build",
  "outputDirectory": "build/client",
  "installCommand": "echo 'Using buildCommand for install'",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/build/(.*)",
      "destination": "/build/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "headers": [
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "SKIP_PATCHES": "true",
    "INSTALL_PLAYWRIGHT": "false"
  }
}
# NPM Configuration for faster installs and workspace handling
engine-strict=false
save-exact=false
package-lock=true
prefer-offline=true
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Workspace configuration - critical for local packages
workspaces-update=true
install-links=true

# Performance optimizations
maxsockets=15
registry=https://registry.npmjs.org/

# Security
audit-level=moderate
fund=false

# Resolve peer dependency issues
legacy-peer-deps=true

# Prevent authentication issues with local workspace packages
# Do NOT set registry for @signtusk scope - let npm handle workspace resolution